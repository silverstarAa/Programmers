class Solution {
  public int solution(long num) {
      int ans = 0;
      
      while (num != 1) {
          if (num % 2 == 0) {
              num /= 2;
          } else {
              num = num * 3 + 1;
          }
          
          ans++;
          if (ans >= 500) {
              ans = -1;
              break;
          }
      }
      
      return ans;
  }
}
