class Solution {
  public int[] solution(long n) {
      String[] arr = String.valueOf(n).split("");
      int leng = arr.length;
      int[] ans = new int[leng];
      
      for (int i = 0; i < leng; i++) {
          ans[i] = Integer.parseInt(arr[leng - 1 - i]);
      }
      
      return ans;
  }
}
